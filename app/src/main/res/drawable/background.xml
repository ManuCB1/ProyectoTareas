<!-- res/drawable/custom_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo principal con esquinas redondeadas -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF" /> <!-- Color de fondo principal -->
            <corners android:radius="12dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>

    <!-- Bordes para destacar el contorno del LinearLayout -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEE" /> <!-- Color de los bordes -->
            <corners android:radius="12dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>

</layer-list>
